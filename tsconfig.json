{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "sourceMap": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@client/*": [
        "./src/http/views/app/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/http/views/app/main.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
