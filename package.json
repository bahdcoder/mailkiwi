{
  "name": "@kibamail/app",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "pnpm mysql:migrate:dev && pnpm clickhouse:migrate:dev && node src/bin/dev.js",
    "quick:dev": "concurrently 'pnpm api:dev' 'pnpm mta_authenticator:dev' 'pnpm mta_log_processor:dev'",
    "api:dev": "env-cmd -e development tsx watch --clear-screen=false --ignore src/views/app --ignore build/ --ignore ./vite.config.ts*.*.mjs src/api/start/api_dev.ts",
    "mta_authenticator:dev": "env-cmd -e development tsx watch --clear-screen=false --ignore src/views/app --ignore build/ --ignore ./vite.config.ts*.*.mjs src/kumomta/start/mta_authenticator.ts",
    "mta_injector:dev": "env-cmd -e development tsx watch --clear-screen=false --ignore src/views/app --ignore build/ --ignore ./vite.config.ts*.*.mjs src/injector/start/mta_injector.ts",
    "mta_log_processor:dev": "env-cmd -e development tsx watch --clear-screen=false --ignore src/views/app --ignore build/ --ignore ./vite.config.ts*.*.mjs src/kumologs/start/mta_log_processor.ts",
    "worker:dev": "env-cmd -e development tsx watch src/start/worker.ts",
    "test": "env-cmd -e test pnpm test:watch --run",
    "build:clean": "del-cli build",
    "test:watch": "pnpm mysql:migrate:test && pnpm clickhouse:migrate:test && env-cmd -e test vitest",
    "types:check": "tsc --noEmit",
    "build:client": "vite build",
    "build:api": "tsx src/bin/build.ts",
    "test:coverage": "env-cmd -e test vitest --run --coverage",
    "build": "pnpm test && pnpm types:check && pnpm build:api",
    "format": "pnpm prettier . --write",
    "lint": "pnpm biome check --write .",
    "mysql:seed:dev": "pnpm mysql:migrate:dev && env-cmd -e development tsx src/bin/seed.ts",
    "mysql:migrate:dev": "env-cmd -e development pnpm mysql:migrate",
    "mysql:migrate:test": "env-cmd -e test pnpm mysql:migrate",
    "clickhouse:migrate:make": "tsx src/bin/clickhouse.ts make",
    "clickhouse:migrate:test": "env-cmd -e test tsx src/bin/clickhouse.ts run",
    "clickhouse:migrate:dev": "env-cmd -e development tsx src/bin/clickhouse.ts run",
    "mysql:migrate": "pnpm drizzle-kit migrate --config=./src/database/drizzle.config.ts",
    "mysql:migrate:make": "env-cmd -e development pnpm drizzle-kit generate --config=./src/database/drizzle.config.ts",
    "mysql:studio": "pnpm drizzle-kit studio --config=./src/database/drizzle.config.ts"
  },
  "keywords": [
    "open source",
    "email marketing",
    "transactional email",
    "email marketing platform"
  ],
  "author": "Frantz Kati <hey@katifrantz.com>",
  "license": "ISC",
  "description": "Kiba: The developer friendly email platform for modern businesses.",
  "devDependencies": {
    "@drizzle-team/brocli": "^0.9.2",
    "@faker-js/faker": "^8.4.1",
    "@fastify/vite": "^6.0.6",
    "@hono/node-server": "^1.12.0",
    "@tanstack/react-query": "^5.51.11",
    "@tanstack/react-router": "^1.43.12",
    "@tanstack/router-devtools": "^1.43.12",
    "@tanstack/router-plugin": "^1.43.12",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/ejs": "^3.1.5",
    "@types/luxon": "^3.4.2",
    "@types/mime-types": "^2.1.4",
    "@types/mjml": "^4.7.4",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.15",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "del-cli": "^5.1.0",
    "drizzle-kit": "^0.22.8",
    "drizzle-orm": "^0.31.2",
    "esbuild": "^0.23.0",
    "form-data": "^4.0.0",
    "globals": "^15.8.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "puppeteer": "^23.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.7.0",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@clickhouse/client": "^1.4.0",
    "@kibamail/haraka": "^3.0.4",
    "@paralleldrive/cuid2": "^2.2.2",
    "@phc/format": "^1.0.0",
    "@poppinss/utils": "^6.7.3",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.12.10",
    "chalk": "^5.3.0",
    "change-case": "^5.4.4",
    "csv-parse": "^5.5.6",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.5.1",
    "edge.js": "^6.0.2",
    "env-cmd": "^10.1.0",
    "envalid": "^8.0.0",
    "haraka-plugin-dkim": "^1.0.5",
    "hono": "^4.5.0",
    "inky": "^1.4.2",
    "ioredis": "^5.4.1",
    "luxon": "^3.5.0",
    "mime-types": "^2.1.35",
    "minio": "^8.0.1",
    "mjml": "^4.15.3",
    "mysql2": "^3.10.3",
    "node-vault": "^0.10.2",
    "nodemailer": "^6.9.14",
    "nunjucks": "^3.2.4",
    "undici": "^6.19.8",
    "uuid": "^10.0.0",
    "valibot": "^0.36.0",
    "zonemta-avast": "1.0.0",
    "zonemta-delivery-counters": "1.0.1",
    "zonemta-limiter": "1.0.0",
    "zonemta-loop-breaker": "1.0.2"
  },
  "prisma": {
    "schema": "src/database/schema/core.prisma"
  },
  "engines": {
    "node": ">=20"
  }
}
